<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>2.0.0</Version>
    <Authors>@sextondjc</Authors>
    <Company />
    <Description>Drapper connector specifically for connecting to SQL Server using the System.Data.SqlClient Client Factory.</Description>
    <PackageLicenseUrl>https://sextondjc.github.io/drapper/</PackageLicenseUrl>
    <PackageProjectUrl>https://sextondjc.github.io/drapper/</PackageProjectUrl>
    <RepositoryUrl>https://github.com/sextondjc/drapper/</RepositoryUrl>
    <PackageReleaseNotes>2.0.0 release, ported to .NET Standard 2.0.</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.Data.SqlClient" Version="4.4.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Drapper.Connectors\Drapper.Connectors.csproj" />
    <ProjectReference Include="..\Drapper.Connectors.Databases\Drapper.Connectors.Databases.csproj" />
    <ProjectReference Include="..\Drapper.Settings.Databases\Drapper.Settings.Databases.csproj" />
  </ItemGroup>

</Project>
